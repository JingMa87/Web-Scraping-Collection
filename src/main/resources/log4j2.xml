<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} %-5level [%t] %logger{36} - %msg%n" />
        </Console>
        <File name="MyFile" fileName="src/main/resources/logging/LogFile.log" immediateFlush="false" append="true">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} %-5level [%t] %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console" />
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>